SELECT s.NamaSiswa, GROUP_CONCAT(IF(MONTH(pb.tanggal_bayar) = 'Januari', pb.nominal_Bayar, NULL)) AS Januari,GROUP_CONCAT(IF(MONTH(pb.tanggal_bayar) = 'Februari', pb.nominal_Bayar, NULL)) AS Februari,GROUP_CONCAT(IF(MONTH(pb.tanggal_bayar) = 'Maret', pb.nominal_Bayar, NULL)) AS Maret,GROUP_CONCAT(IF(MONTH(pb.tanggal_bayar) = 'April', pb.nominal_Bayar, NULL)) AS April ,GROUP_CONCAT(IF(MONTH(pb.tanggal_bayar) = 'Mei', pb.nominal_Bayar, NULL)) AS Mei,GROUP_CONCAT(IF(MONTH(pb.tanggal_bayar) = 'Juni', pb.nominal_Bayar, NULL)) AS Juni,GROUP_CONCAT(IF(MONTH(pb.tanggal_bayar) = 'Agustus', pb.nominal_Bayar, NULL)) AS Agustus,GROUP_CONCAT(IF(MONTH(pb.tanggal_bayar) = 'September', pb.nominal_Bayar, NULL)) AS September,GROUP_CONCAT(IF(MONTH(pb.tanggal_bayar) = 'Oktober', pb.nominal_Bayar, NULL)) AS Oktober,GROUP_CONCAT(IF(MONTH(pb.tanggal_bayar) = 'November', pb.nominal_Bayar, NULL)) AS November,GROUP_CONCAT(IF(MONTH(pb.tanggal_bayar) = 'Desember', pb.nominal_Bayar, NULL)) AS Desember FROM Siswa s LEFT JOIN Pembayaran pb ON s.NIS=pb.NIS GROUP BY	s.NamaSiswa
